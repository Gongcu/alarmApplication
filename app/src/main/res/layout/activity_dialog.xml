<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DialogActivity">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="16dp"

                    android:paddingVertical="5dp"
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정"
                    android:textColor="@color/colorMain"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_weight="1"
                    android:paddingVertical="5dp"
                    android:id="@+id/todoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:paddingLeft="16dp"
                    android:hint="할 일을 입력하세요"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorMain"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/keyboardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="키보드 숨기기"
                    android:textColor="@color/colorMain"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMain"></View>

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingVertical="5dp"
                android:paddingLeft="16dp"
                android:text="마감일"
                android:textColor="@color/colorMain"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_gravity="center_horizontal"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>
            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePicker"
                android:layout_gravity="center_horizontal"
                android:timePickerMode="spinner"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMain"></View>
            <LinearLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingVertical="5dp"
                    android:paddingLeft="16dp"
                    android:text="알람설정"
                    android:textColor="@color/colorMain"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <CheckBox
                    android:layout_marginLeft="16dp"
                    android:id="@+id/alarmBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알람 없음" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearItem"
                android:orientation="vertical">

            <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datePicker2"
                    android:layout_gravity="center_horizontal"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"/>
                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timePicker2"
                    android:layout_gravity="center_horizontal"
                    android:timePickerMode="spinner"/>
        </LinearLayout>

</LinearLayout>

    </ScrollView>

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:foreground="?attr/selectableItemBackground"
            android:text="저장"
            android:textColor="@color/colorMain"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/quitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:foreground="?attr/selectableItemBackground"
            android:text="취소"
            android:textColor="@color/colorSub"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>